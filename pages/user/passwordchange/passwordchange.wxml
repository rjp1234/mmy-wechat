<view class="modify-form">

  <form bindsubmit="formSubmit">

    <view class="label-list label-lists">

      <view class="label">头像</view>

      <image src="{{userInfo.image}}"></image>

    </view>

    <view class="label-list">

      <view class="label">第一次输入</view>

      <input placeholder="请输入你要变更的密码" placeholder-class="place" name="password1" password bindinput='passwordInput' />

    </view>

    <view class="label-list">

      <view class="label">第二次输入</view>

      <input placeholder="请输入你要变更的密码" placeholder-class="place" name="password1" password bindblur='passwordCheck' />

    </view>
   <view class="label-list" wx:if="{{flag}}">
        <text style='color:{{msgColor}}'>{{msg}}</text>
   </view>

    <button form-type='submit' class="submit">确定修改</button>

  </form>

</view>