<!-- login.wxml -->
<view class="page login">

  <view class="login-item">
    <image class="login-item-img" mode="scaleToFill" src="/images/icon/logo.png"></image>

    <view class="login-item-section">
      <!--<input placeholder="请输入Token" class="login-item-input" placeholder-style="color:#f5f5f5;" bindinput="bindKeyInput" />-->
      <input placeholder="请输入账号" class="login-item-input" placeholder-style="color:#f5f5f5;" bindinput="bindLoginname" />
    </view>
    <view>
      <text style='color:red;'>{{msg1}}</text>
    </view>
    <view class="login-item-section">
      <input password placeholder="请输入密码" class="login-item-input" placeholder-style="color:#f5f5f5;" bindinput="bindPassword" />
    </view>
    <view>
      <text style='color:red;'>{{msg2}}</text>
    </view>
    <view class="login-item-button">
      <button type="primary" size="default" plain="false" loading="{{loading}}" class="login-button" bindtap="login"> 登录 </button>
    </view>
  </view>

</view>